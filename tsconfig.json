{
  "compilerOptions": {
    "types": ["node"],
    "module": "ES6",
    "target": "es6",
    "rootDir": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  }
}